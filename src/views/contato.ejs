<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">vagoes cadastrados</h1>
      <p class="text-center lead">Crie ou edite o vagao abaixo.</p>

      <%- include('includes/messages') %>
     
      <form action="/contato/register" method="POST">
  
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Placa</label>
          <input type="text" class="form-control" name="placa">
        </div>
        <div class="form-group">
          <label>Ferrovia</label>
          <input type="text" class="form-control" name="ferrovia">
        </div>
        <div class="form-group">
          <label>Produto</label>
          <input type="text" class="form-control" name="produto">
        </div>
        <div class="form-group">
          <label>Peso Destino</label>
          <input type="number" class="form-control" name="peso">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>